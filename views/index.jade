style
  .magnet {
    display: inline-block;
    padding: 10px;
    background-color: papayawhip;
    border: solid 1px grey;
    margin: 5px;
    cursor: pointer;
    position: absolute;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }
script(src = "/javascript/magnets.js")
#hold
  for word in words
    .magnet( style = "left: "+ word.position.left +"px; top: "+ word.position.top +"px", "data-word" = "#{word.word}")= word.word