body
  font-family: sans-serif
  padding: 0px
  margin: 0px
.right
  float: right
.left
  float: left
.cl, .clear
  clear: both

#header
  color: #FFF
  height: 60px
  background-color: #ff574e
  border-top: solid 8px #444444
  border-bottom: solid 4px #df4c44
  .inner
    width: 960px
    margin: 0px auto
    margin-top: 14px
#logo
  font-size: 20px
  text-shadow: 0px 2px 0px #a61f18

#hold
  width: 100%
  height: 100%
  position: absolute
  background: #eaf3f1 url('images/background.png')

#add_word
  background-color: #df4c44
  box-shadow 0px 3px 0px #b23d37
  border-radius: 3px
  padding: 5px 10px
  font-weight: bold
  cursor: pointer
  &:active
    border: solid 1px #b23d37
    box-shadow inset 0px 2px 2px #b23d37

.no_select
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

.magnet
  display: inline-block
  box-shadow: 0px 2px 0px #abb1af
  background-color: #FFF
  padding: 5px 8px
  color: #4c5a55
  border-radius: 3px
  font-size: 21px
  cursor: pointer
  position: absolute
  &:active
    box-shadow inset 0px 1px 2px #abb1af
